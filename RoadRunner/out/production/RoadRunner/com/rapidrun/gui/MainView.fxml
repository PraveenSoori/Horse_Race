<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.rapidrun.gui.MainViewController"
      xmlns:fx="http://javafx.com/fxml" spacing="20" alignment="CENTER"
      style="-fx-padding: 20;

             -fx-background-size: cover;
             -fx-background-position: center center;
             -fx-background-repeat: no-repeat;">

    <Button fx:id="addHorseButton" text="Add Horse" onAction="#handleAddHorse" maxWidth="Infinity"
            style="-fx-font-size: 14pt; -fx-background-color: #2664cb; -fx-text-fill: white;"/>
    <Button fx:id="deleteHorseButton" text="Delete Horse" onAction="#handleDeleteHorse" maxWidth="Infinity"
            style="-fx-font-size: 14pt; -fx-background-color: #2664cb; -fx-text-fill: white;"/>
    <Button fx:id="updateHorseButton" text="Update Horse Details" onAction="#handleUpdateHorseAction" maxWidth="Infinity"
            style="-fx-font-size: 14pt; -fx-background-color: #2664cb; -fx-text-fill: white;"/>
    <Button fx:id="viewAllHorsesButton" text="View All Horses" onAction="#handleViewHorses" maxWidth="Infinity"
            style="-fx-font-size: 14pt; -fx-background-color: #2664cb; -fx-text-fill: white;"/>
    <Button fx:id="viewSelectedHorsesButton" text="View Selected Horses" onAction="#handleViewSelectedHorses" maxWidth="Infinity"
            style="-fx-font-size: 14pt; -fx-background-color: #2664cb; -fx-text-fill: white;"/>
    <Button fx:id="startRaceButton" text="Start Race" onAction="#handleStartRace" maxWidth="Infinity"
            style="-fx-font-size: 14pt; -fx-background-color: #2664cb; -fx-text-fill: white;"/>
    <Button fx:id="displayRaceResultsButton" text="Display Race Results" onAction="#displayRaceResults" maxWidth="Infinity"
            style="-fx-font-size: 14pt; -fx-background-color: #2664cb; -fx-text-fill: white;"/>
</VBox>
